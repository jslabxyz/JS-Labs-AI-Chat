# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SCOPES=read_products,write_products,read_customers,write_customers,read_orders,write_orders,read_draft_orders,write_draft_orders

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Claude API Configuration (alternative)
CLAUDE_API_KEY=your_claude_api_key_here

# Database Configuration
# For local development (SQLite)
DATABASE_URL=file:dev.sqlite

# For Prisma Cloud (uncomment when ready)
# DATABASE_URL=prisma://your-prisma-cloud-connection-string
# PRISMA_GENERATE_DATAPROXY=true

# Prisma Cloud Configuration (for Business Plan)
# PRISMA_API_KEY=your_prisma_api_key_here
# PRISMA_ENVIRONMENT_ID=your_environment_id_here

# Prisma Accelerate (for production performance)
# ACCELERATE_API_KEY=your_accelerate_api_key_here

# App URLs (update these with your actual URLs)
SHOPIFY_APP_URL=https://your-app-url.ngrok.io
HOST=https://your-app-url.ngrok.io

# Optional: Custom MCP endpoints
# CUSTOM_STOREFRONT_MCP_ENDPOINT=https://your-custom-mcp-endpoint.com
# CUSTOM_CUSTOMER_MCP_ENDPOINT=https://your-custom-customer-mcp-endpoint.com

# Development Settings
NODE_ENV=development
PORT=3000